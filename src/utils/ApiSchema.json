{
  "type": "object",
  "title": "Idleon Companion Schema",
  "properties": {
    "alchemy": {
      "type": "object",
      "properties": {
        "upgrades": {
          "description": "Tracks the level of each alchemy bubble for each color cauldron.",
          "type": "object",
          "properties": {
            "Orange": {
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0
              },
              "minItems": 15
            },
            "Green": {
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0
              },
              "minItems": 15
            },
            "Purple": {
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0
              },
              "minItems": 15
            },
            "Yellow": {
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0
              },
              "minItems": 15
            }
          },
          "required": ["Orange", "Green", "Purple", "Yellow"]
        },
        "vials": {
          "description": "Tracks the level of the vial (0 being not unlocked).",
          "type": "object",
          "patternProperties": {
            "": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      },
      "required": ["upgrades", "vials"]
    },
    "cards": {
      "description": "Cards tracks the tier of each card (0: unobtained, 1: obtained, 2: bronze, 3: silver, 4: gold).",
      "type": "object",
      "patternProperties": {
        "": {
          "type": "integer",
          "minimum": 0,
          "maximum": 4
        }
      }
    },
    "chars": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "class": {
            "description": "The class of the character. Must be one of the enum entries below.",
            "enum": [
              "Beginner",
              "Journeyman",
              "Maestro",
              "Warrior",
              "Barbarian",
              "Squire",
              "Archer",
              "Bowman",
              "Hunter",
              "Mage",
              "Shaman",
              "Wizard"
            ]
          },
          "name": {
            "description": "The name of the character.",
            "type": "string"
          },
          "level": {
            "description": "The level of the character.",
            "type": "integer",
            "minimum": 1
          },
          "items": {
            "description": "The items that the character owns, including bags, pouches, etc. Should appear exactly as in the game (e.g. 'Inventory Bag A').",
            "type": "object",
            "patternProperties": {
              "": {
                "type": "boolean"
              }
            }
          },
          "skills": {
            "description": "The skill levels of the character.",
            "type": "object",
            "patternProperties": {
              "": {
                "type": "integer",
                "minimum": 0
              }
            },
            "required": [
              "Alchemy",
              "Catching",
              "Choppin'",
              "Construction",
              "Fishing",
              "Mining",
              "Smithing",
              "Trapping",
              "Worship"
            ]
          },
          "constellations": {
            "description": "The constellations that the character has completed. Use the constellation ID (e.g. A-1, B-7).",
            "type": "object",
            "patternProperties": {
              "^[A-Z]+-\\d+$": {
                "type": "boolean"
              }
            }
          },
          "starSigns": {
            "description": "The star signs that the character has equipped. Use the star sign ID (e.g. 1, 1a, 7c, 10).",
            "type": "object",
            "patternProperties": {
              "": {
                "type": "boolean"
              }
            }
          }
        },
        "required": [
          "class",
          "name",
          "level",
          "items",
          "skills",
          "constellations",
          "starSigns"
        ]
      },
      "maxItems": 9
    },
    "checklist": {
      "description": "Items collected for the progress tracker, such as chests, inventory bags, or stamps. Should appear exactly as in the game (e.g. 'Bag o Heads Stamp').",
      "type": "object",
      "patternProperties": {
        "": {
          "type": "boolean"
        }
      }
    },
    "stamps": {
      "description": "Levels for each stamp that the player has unlocked. Key is stamp name (e.g. 'Alch Go Brrr Stamp').",
      "type": "object",
      "patternProperties": {
        "": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "starSigns": {
      "description": "The star signs that have been unlocked by spending Star Chart Points. Key is star sign ID: (e.g. 1, 1a, 7c, 10).",
      "type": "object",
      "patternProperties": {
        "": {
          "type": "boolean"
        }
      }
    },
    "statues": {
      "description": "Tracking information for statues, including level, progress, and golden status. Key is statue name (e.g. 'Power Statue').",
      "type": "object",
      "patternProperties": {
        "": {
          "type": "object",
          "properties": {
            "level": {
              "type": "integer",
              "minimum": 0
            },
            "progress": {
              "type": "integer",
              "minimum": 0
            },
            "golden": {
              "type": "boolean"
            }
          },
          "required": ["level", "progress", "golden"]
        }
      }
    },
    "version": {
      "description": "The game version from which this data was retrieved.",
      "type": "string",
      "pattern": "^\\d+\\.\\d+(.+)?"
    }
  },
  "required": ["version"],
  "additionalProperties": false
}
